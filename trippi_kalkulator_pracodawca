    <script>
        // Stałe do obliczeń
        const CO2_PER_KM_CAR = 0.12; // kg CO2 na km (średnia dla samochodu)
        const CO2_PER_KM_BIKE = 0; // kg CO2 na km (rower)
        const TREE_CO2_ABSORPTION = 20; // kg CO2 rocznie na drzewo
        const SICK_LEAVE_REDUCTION = 0.25; // 25% redukcja zwolnień
        const PRODUCTIVITY_INCREASE = 0.15; // 15% wzrost produktywności
        const AVG_SICK_LEAVE_COST = 200; // PLN dziennie
        const PARKING_COST_PER_EMPLOYEE = 50; // PLN miesięcznie
        const HEALTH_COST_REDUCTION = 36; // PLN miesięcznie na pracownika

        function calculateAll() {
            // Pobierz dane wejściowe
            const employeeCount = parseFloat(document.getElementById('employeeCount').value);
            const monthlyBenefit = parseFloat(document.getElementById('monthlyBenefit').value);
            const avgDistance = parseFloat(document.getElementById('avgDistance').value);
            const workDays = parseFloat(document.getElementById('workDays').value);
            const bikeUsageRate = parseFloat(document.getElementById('bikeUsageRate').value) / 100;

            // Obliczenia kosztów
            const monthlyCostPerEmployee = monthlyBenefit;
            const totalMonthlyCost = monthlyCostPerEmployee * employeeCount;
            const totalYearlyCost = totalMonthlyCost * 12;

            // Obliczenia CO2
            const dailyDistanceTotal = avgDistance * 2; // tam i z powrotem
            const dailyCO2Saved = dailyDistanceTotal * CO2_PER_KM_CAR;
            const effectiveDaysPerMonth = workDays * bikeUsageRate;
            const monthlyCO2Saved = dailyCO2Saved * effectiveDaysPerMonth;
            const yearlyCO2Saved = monthlyCO2Saved * 12;
            const totalYearlyCO2Saved = yearlyCO2Saved * employeeCount / 1000; // w tonach

            // Równoważniki
            const treesEquivalent = Math.round((yearlyCO2Saved * employeeCount) / TREE_CO2_ABSORPTION);
            const carKmEquivalent = Math.round((yearlyCO2Saved * employeeCount) / CO2_PER_KM_CAR);

            // Oszczędności
            const parkingSavings = Math.round(employeeCount * PARKING_COST_PER_EMPLOYEE * bikeUsageRate);
            const healthSavings = Math.round(employeeCount * HEALTH_COST_REDUCTION * bikeUsageRate);
            const totalMonthlySavings = parkingSavings + healthSavings;

            // ROI (uproszczone)
            const avgSickLeaveSavings = employeeCount * 2 * AVG_SICK_LEAVE_COST * SICK_LEAVE_REDUCTION * 12; // rocznie
            const productivityValue = totalYearlyCost * PRODUCTIVITY_INCREASE; // szacunkowa wartość
            const totalBenefits = avgSickLeaveSavings + productivityValue + (totalMonthlySavings * 12);
            const roi = Math.round((totalBenefits / totalYearlyCost) * 100);

            // Aktualizuj wyświetlane wartości
            document.getElementById('monthlyCostPerEmployee').textContent = `${monthlyCostPerEmployee.toFixed(0)} PLN`;
            document.getElementById('totalMonthlyCost').textContent = `${totalMonthlyCost.toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, " ")} PLN`;
            document.getElementById('totalYearlyCost').textContent = `${totalYearlyCost.toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, " ")} PLN`;
            document.getElementById('roi').textContent = `${roi}%`;

            document.getElementById('dailyCO2Reduction').textContent = `${dailyCO2Saved.toFixed(1)} kg`;
            document.getElementById('monthlyCO2Reduction').textContent = `${monthlyCO2Saved.toFixed(1)} kg`;
            document.getElementById('yearlyCO2Reduction').textContent = `${yearlyCO2Saved.toFixed(0)} kg`;
            document.getElementById('totalYearlyCO2').textContent = `${totalYearlyCO2Saved.toFixed(1)} ton`;

            document.getElementById('treesEquivalent').textContent = treesEquivalent.toLocaleString('pl-PL');
            document.getElementById('carKmEquivalent').textContent = carKmEquivalent.toLocaleString('pl-PL');

            document.getElementById('parkingSavings').textContent = `${parkingSavings.toLocaleString('pl-PL')} PLN/msc`;
            document.getElementById('healthSavings').textContent = `${healthSavings.toLocaleString('pl-PL')} PLN/msc`;
            document.getElementById('totalMonthlySavings').textContent = `${totalMonthlySavings.toLocaleString('pl-PL')} PLN`;

            // Animacja przy aktualizacji
            document.querySelectorAll('.result-box').forEach(box => {
                box.style.animation = 'none';
                setTimeout(() => {
                    box.style.animation = 'pulse 2s infinite';
                }, 10);
            });
        }

        // Automatyczne przeliczanie przy zmianie wartości
        document.querySelectorAll('input, select').forEach(input => {
            input.addEventListener('change', calculateAll);
        });

        // Początkowe obliczenie
        calculateAll();
    </script>
</body>
</html>
